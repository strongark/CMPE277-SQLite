<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_new_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cmpe277.datastorage.NewProductActivity"
    tools:showIn="@layout/activity_new_product">

    <TextView
        android:text="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:ems="5"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/txt_title" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:ems="5"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/txt_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:layout_toRightOf="@id/txt_name"
        android:id="@+id/edt_name" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txt_name"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:ems="5"
        android:id="@+id/txt_desc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Description"
        android:ems="10"
        android:layout_toRightOf="@id/txt_desc"
        android:layout_below="@id/edt_name"
        android:id="@+id/edt_desc" />

    <TextView
        android:text="Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/txt_desc"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:ems="5"
        android:id="@+id/txt_price" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Price"
        android:ems="10"
        android:layout_toRightOf="@id/txt_price"
        android:layout_below="@id/edt_desc"
        android:id="@+id/edt_price" />

    <TextView
        android:id="@+id/txt_review"
        android:text="Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txt_price"
        android:ems="5"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>

    <EditText
        android:id="@+id/edt_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Review"
        android:ems="10"
        android:layout_toRightOf="@id/txt_review"
        android:layout_below="@id/edt_price"
        />
    <Button
        android:id="@id/add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:onClick="onSaveProduct"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/txt_review"
        android:layout_marginStart="60dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:layout_alignBaseline="@+id/add_btn"
        android:layout_alignBottom="@+id/add_btn"
        android:layout_toEndOf="@+id/add_btn"
        android:layout_marginStart="31dp"
        android:onClick="onCancel"/>
</RelativeLayout>
